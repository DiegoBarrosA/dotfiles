/* Material Darker Theme for GTK3/GTK4 */
/* Managed by Ansible - Do not edit directly */

/* ===== Base Colors ===== */
@define-color window_bg_color #{{ theme.colors.base00 }};
@define-color window_fg_color #{{ theme.colors.base05 }};

@define-color view_bg_color #{{ theme.colors.base00 }};
@define-color view_fg_color #{{ theme.colors.base05 }};

@define-color headerbar_bg_color #{{ theme.colors.base01 }};
@define-color headerbar_fg_color #{{ theme.colors.base05 }};
@define-color headerbar_border_color #{{ theme.colors.base02 }};
@define-color headerbar_backdrop_color #{{ theme.colors.base00 }};
@define-color headerbar_shade_color rgba(0, 0, 0, 0.36);

@define-color sidebar_bg_color #{{ theme.colors.base01 }};
@define-color sidebar_fg_color #{{ theme.colors.base05 }};
@define-color sidebar_backdrop_color #{{ theme.colors.base00 }};
@define-color sidebar_shade_color rgba(0, 0, 0, 0.25);

@define-color secondary_sidebar_bg_color #{{ theme.colors.base00 }};
@define-color secondary_sidebar_fg_color #{{ theme.colors.base05 }};
@define-color secondary_sidebar_backdrop_color #{{ theme.colors.base00 }};
@define-color secondary_sidebar_shade_color rgba(0, 0, 0, 0.25);

@define-color card_bg_color #{{ theme.colors.base01 }};
@define-color card_fg_color #{{ theme.colors.base05 }};
@define-color card_shade_color rgba(0, 0, 0, 0.36);

@define-color dialog_bg_color #{{ theme.colors.base01 }};
@define-color dialog_fg_color #{{ theme.colors.base05 }};

@define-color popover_bg_color #{{ theme.colors.base01 }};
@define-color popover_fg_color #{{ theme.colors.base05 }};
@define-color popover_shade_color rgba(0, 0, 0, 0.25);

@define-color thumbnail_bg_color #{{ theme.colors.base01 }};
@define-color thumbnail_fg_color #{{ theme.colors.base05 }};

/* ===== Accent Colors ===== */
@define-color accent_color #{{ theme.colors.base0D }};
@define-color accent_bg_color #{{ theme.colors.base0D }};
@define-color accent_fg_color #{{ theme.colors.base00 }};

/* ===== Semantic Colors ===== */
@define-color destructive_color #{{ theme.colors.base08 }};
@define-color destructive_bg_color #{{ theme.colors.base08 }};
@define-color destructive_fg_color #{{ theme.colors.base00 }};

@define-color success_color #{{ theme.colors.base0B }};
@define-color success_bg_color #{{ theme.colors.base0B }};
@define-color success_fg_color #{{ theme.colors.base00 }};

@define-color warning_color #{{ theme.colors.base0A }};
@define-color warning_bg_color #{{ theme.colors.base0A }};
@define-color warning_fg_color #{{ theme.colors.base00 }};

@define-color error_color #{{ theme.colors.base08 }};
@define-color error_bg_color #{{ theme.colors.base08 }};
@define-color error_fg_color #{{ theme.colors.base00 }};

/* ===== Suggested Action ===== */
@define-color suggested_bg_color @accent_bg_color;
@define-color suggested_fg_color @accent_fg_color;

/* ===== Borders ===== */
@define-color borders #{{ theme.colors.base02 }};
@define-color unfocused_borders #{{ theme.colors.base02 }};

/* ===== Scrollbar ===== */
@define-color scrollbar_outline_color #{{ theme.colors.base02 }};

/* ===== Text and Selection ===== */
@define-color shade_color rgba(0, 0, 0, 0.36);
@define-color scrollbar_color #{{ theme.colors.base03 }};

/* ===== Links ===== */
@define-color link_color #{{ theme.colors.base0D }};
@define-color link_visited_color #{{ theme.colors.base0E }};

/* ===== Window styling ===== */
window, .background {
  background-color: @window_bg_color;
  color: @window_fg_color;
}

/* ===== Headerbar ===== */
headerbar {
  background-color: @headerbar_bg_color;
  color: @headerbar_fg_color;
  border-bottom-color: @headerbar_border_color;
}

headerbar:backdrop {
  background-color: @headerbar_backdrop_color;
}

/* ===== Views and Lists ===== */
.view, iconview, textview, treeview {
  background-color: @view_bg_color;
  color: @view_fg_color;
}

list, listview {
  background-color: @view_bg_color;
  color: @view_fg_color;
}

row:selected {
  background-color: alpha(@accent_color, 0.3);
}

row:hover {
  background-color: alpha(@view_fg_color, 0.05);
}

/* ===== Sidebar ===== */
.sidebar, .navigation-sidebar {
  background-color: @sidebar_bg_color;
  color: @sidebar_fg_color;
}

.sidebar:backdrop, .navigation-sidebar:backdrop {
  background-color: @sidebar_backdrop_color;
}

/* ===== Cards ===== */
.card {
  background-color: @card_bg_color;
  color: @card_fg_color;
  border-color: @borders;
}

/* ===== Popovers ===== */
popover, popover.background {
  background-color: @popover_bg_color;
  color: @popover_fg_color;
}

/* ===== Dialogs ===== */
dialog, messagedialog {
  background-color: @dialog_bg_color;
  color: @dialog_fg_color;
}

/* ===== Buttons ===== */
button {
  background-color: alpha(@view_fg_color, 0.1);
  color: @view_fg_color;
}

button:hover {
  background-color: alpha(@view_fg_color, 0.15);
}

button:active, button:checked {
  background-color: alpha(@view_fg_color, 0.2);
}

button.suggested-action {
  background-color: @accent_bg_color;
  color: @accent_fg_color;
}

button.destructive-action {
  background-color: @destructive_bg_color;
  color: @destructive_fg_color;
}

/* ===== Entries ===== */
entry {
  background-color: alpha(@view_fg_color, 0.05);
  color: @view_fg_color;
  caret-color: @accent_color;
}

entry:focus {
  outline-color: @accent_color;
  border-color: @accent_color;
}

/* ===== Selections ===== */
selection {
  background-color: alpha(@accent_color, 0.3);
  color: @view_fg_color;
}

/* ===== Check and Radio buttons ===== */
checkbutton, radiobutton {
  color: @view_fg_color;
}

check:checked, radio:checked {
  background-color: @accent_bg_color;
  color: @accent_fg_color;
}

/* ===== Switches ===== */
switch:checked {
  background-color: @accent_bg_color;
}

switch:checked slider {
  background-color: @accent_fg_color;
}

/* ===== Progress bars ===== */
progressbar progress {
  background-color: @accent_bg_color;
}

/* ===== Scale/Sliders ===== */
scale highlight {
  background-color: @accent_bg_color;
}

scale slider {
  background-color: @accent_bg_color;
}

/* ===== Tooltips ===== */
tooltip, .tooltip {
  background-color: @popover_bg_color;
  color: @popover_fg_color;
  border-color: @borders;
}

/* ===== Menus ===== */
menu, .menu, .context-menu {
  background-color: @popover_bg_color;
  color: @popover_fg_color;
}

menuitem:hover {
  background-color: alpha(@accent_color, 0.2);
}

/* ===== Notebooks/Tabs ===== */
notebook > header {
  background-color: @headerbar_bg_color;
}

notebook > header tab:checked {
  background-color: @view_bg_color;
  border-bottom-color: @accent_color;
}

/* ===== Scrollbars ===== */
scrollbar slider {
  background-color: @scrollbar_color;
}

scrollbar slider:hover {
  background-color: alpha(@view_fg_color, 0.4);
}

/* ===== Spinbuttons ===== */
spinbutton {
  background-color: alpha(@view_fg_color, 0.05);
}

/* ===== Infobars ===== */
infobar {
  background-color: @accent_bg_color;
  color: @accent_fg_color;
}

infobar.warning {
  background-color: @warning_bg_color;
  color: @warning_fg_color;
}

infobar.error {
  background-color: @error_bg_color;
  color: @error_fg_color;
}

/* ===== Focus rings ===== */
*:focus-visible {
  outline-color: @accent_color;
}
